<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.micronaut" level="ERROR"/>
    <logger name="org.xnio" level="ERROR"/>
    <logger name="io.netty" level="ERROR"/>
    <logger name="org.jboss" level="ERROR"/>
    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.springframework.jdbc.core" level="INFO"/>
    <logger name="org.flywaydb.core.internal.scanner.classpath" level="INFO"/>
    <logger name="io.micronaut.http.client" level="TRACE"/>
    <logger name="io.micronaut.data" level="TRACE"/>
    <logger name="io.micronaut.data.query" level="TRACE"/>
    <logger name="com.cynergisuite" level="TRACE"/>

    <root level="TRACE">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
